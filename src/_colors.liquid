permalink: false
---
:root{
/* global colors */
	--color-default: rgb(38 38 38);
  --darkgrey: rgb(38 38 38);
  --mediumgrey: rgb(190 190 190);
	--grey: rgb(150 150 150);
	--lightgrey: rgb(240 240 240);
  --white: rgb(255 255 255);
	--bluegrey: rgb(208, 219,227);
	--accent: rgb(250 80 0);

	--alpha: 40%;
	--bin1: rgb(220 220 220);
	--bin2: rgb(250 250 250);
	--bin3: rgb(255 255 170);

  --bintip: rgb(160 160 60);
  --binline: rgb(222 222 170);
	--gridline: rgb(202 198 197);
	--accent: rgb(207 102 52);{% for c in plotcolors %}
  --{{ c[0] }}: {{ c[1] }};
{% endfor %}
}

{% for c in plotcolors %}
[data-color="{{ c[0] }}"] {
  .area, .dot{
    fill: rgb( {{ c[1] }} / var(--alpha));
  }
  .series-label, .svg-label{
    fill: rgb( {{ c[1] }} );  
  }
  .line{
     stroke: rgb( {{ c[1] }} );
  }
  .tip-label, .key-label, &.plot-tips{
    color: rgb( {{ c[1] }} );
  }
  .key-color{
     background: rgb( {{ c[1] }} );
  }
}
{% endfor %}